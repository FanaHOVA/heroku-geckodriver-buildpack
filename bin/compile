#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
# set -x

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

LP_DIR=`cd $(dirname $0); cd ..; pwd`

function error() {
  echo " !     $*" >&2
  exit 1
}

function topic() {
  echo "-----> $*"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

stack=${STACK:-heroku-16}

# Install correct dependencies according to $STACK
case "$stack" in
  "cedar-14")
    PACKAGES="libxss1"
    ;;
  "heroku-16")
    PACKAGES="libxss1 libx11-xcb1 libxcomposite1 libxcursor1 libxdamage1 libxfixes3 libxi6 libxtst6 libnss3 libgconf-2-4 libxrandr2 libasound2 libatk1.0-0 libgtk2.0-0 libgtk-3-0 libxinerama1 libcairo-gobject2"
    ;;
  *)
    error "STACK must be 'cedar-14' or 'heroku-16', not '$stack.'"
esac

topic "Installing Geckodriver."

#!/usr/bin/env bash
mkdir /app/vendor/geckodriver
cd /app/vendor/geckodriver
wget https://github.com/mozilla/geckodriver/releases/download/v0.18.0/geckodriver-v0.18.0-linux64.tar.gz
tar -xvzf geckodriver*
chmod +x geckodriver
export PATH=$PATH:/app/vendor/geckodriver/geckodriver
